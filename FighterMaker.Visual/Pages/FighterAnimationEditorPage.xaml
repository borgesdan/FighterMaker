<Page x:Class="FighterMaker.Visual.Pages.FighterAnimationEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FighterMaker.Visual.Pages" 
      xmlns:ctrl="clr-namespace:FighterMaker.Visual.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FighterAnimationEditorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <ctrl:AnimationSequenceControl x:Name="AnimationSequence"
                                       Grid.Row="0"
                                       AddAnimationButtonClick="AnimationSequence_AddAnimationButtonClick"/>
        <DockPanel Grid.Row="1">
            <Expander ExpandDirection="Right" IsExpanded="False">
                <ctrl:PropertiesViewControl x:Name="PropertiesView" Width="300"></ctrl:PropertiesViewControl>
            </Expander>
            <Canvas Background="CornflowerBlue"></Canvas>
        </DockPanel>
    </Grid>
</Page>
