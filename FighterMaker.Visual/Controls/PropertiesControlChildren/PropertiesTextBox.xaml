<UserControl x:Class="FighterMaker.Visual.Controls.PropertiesControlChildren.PropertiesTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FighterMaker.Visual.Controls.PropertiesControlChildren"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
        <!--<ColumnDefinition /> -->
        <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="DisplayLabel" Content="" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Visibility="Collapsed" />
        <TextBox x:Name="ValueTextBox" Grid.Column="1" VerticalContentAlignment="Center" KeyDown="ValueTextBox_KeyDown" />
    </Grid>
</UserControl>
